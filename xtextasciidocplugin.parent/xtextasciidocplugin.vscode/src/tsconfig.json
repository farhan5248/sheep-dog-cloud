{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": false,
        "inlineSources": false,
        "declaration": true,
        "stripInternal": true,
        "lib": [ "es6" ],
        "outDir": "../out",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "out"
    ]
}